---
kind: StatefulSet
apiVersion: apps/v1
metadata:
  name: keycloak
  namespace: {{ infra_namespace }}
spec:
  revisionHistoryLimit: 5
  selector:
    matchLabels:
      app: keycloak
  serviceName: keycloak
  template:
    metadata:
      name: keycloak
      labels:
        app: keycloak
    spec:
      serviceAccountName: {{ infra_namespace_service_account }}

      # A 'preferred' (not guaranteed)
      # node selection affinity...
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 1
            preference:
              matchExpressions:
              - key: purpose
                operator: In
                values:
                - {{ infra_node_purpose }}

      containers:
      - name: keycloak
        image: jboss/keycloak:{{ kc_version }}
        imagePullPolicy: IfNotPresent
        terminationMessagePolicy: FallbackToLogsOnError
        ports:
        - name: http
          containerPort: 8080
        - name: https
          containerPort: 8443
        resources:
          limits:
            cpu: {{ kc_cpu_limit }}
            memory: {{ kc_mem_limit }}
          requests:
            cpu: {{ kc_cpu_request }}
            memory: {{ kc_mem_request }}
        readinessProbe:
          initialDelaySeconds: 60
          periodSeconds: 20
          timeoutSeconds: 5
          failureThreshold: 6
          httpGet:
            path: /auth/realms/master
            port: http
        livenessProbe:
          initialDelaySeconds: 300
          timeoutSeconds: 5
          httpGet:
            path: /auth/
            port: http
        env:
        - name: KEYCLOAK_USER
          value: {{ kc_admin_fact }}
        - name: KEYCLOAK_PASSWORD
          value: {{ kc_admin_password_fact }}
        - name: DB_VENDOR
          value: postgres
        - name: DB_ADDR
          value: database
        - name: DB_DATABASE
          value: {{ kc_database_fact }}
        - name: DB_USER
          value: {{ kc_user_fact }}
        - name: DB_PASSWORD
          value: {{ kc_user_password_fact }}
        - name: PROXY_ADDRESS_FORWARDING
          value: 'true'
