---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{ pg_volume_name }}
  namespace: {{ infra_namespace }}
spec:
  accessModes:
  - ReadWriteOnce
{% if pg_vol_storageclass != ' ' %}
  storageClassName: '{{ pg_vol_storageclass }}'
{% endif %}
  resources:
    requests:
      storage: '{{ pg_vol_size_g }}Gi'
