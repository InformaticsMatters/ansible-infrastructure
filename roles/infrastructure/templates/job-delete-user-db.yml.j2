---
kind: Job
apiVersion: batch/v1
metadata:
  name: delete-user-db
  namespace: {{ infra_namespace }}
spec:
  selector:
    name: delete-user-db
  template:
    metadata:
      labels:
        name: delete-user-db
    spec:
      serviceAccountName: {{ infra_namespace_service_account }}

      # A 'preferred' (not guaranteed)
      # node selection affinity...
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 1
            preference:
              matchExpressions:
              - key: purpose
                operator: In
                values:
                - {{ infra_node_purpose }}

      containers:
      - name: delete-user-db
        image: informaticsmatters/sql-client:{{ pg_sql_client_tag }}
        env:
        - name: DB_USER
          value: {{ db_user }}
        - name: DB
          value: {{ db }}
        volumeMounts:
        - mountPath: /home/client/script.sh
          name: delete-user-db-script
          subPath: script.sh

      volumes:
      - name: delete-user-db-script
        configMap:
          name: delete-user-db-script
          defaultMode: 0777
      restartPolicy: Never
