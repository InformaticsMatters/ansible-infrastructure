---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: {{ cinder_storage_basename }}-delete
provisioner: kubernetes.io/cinder
reclaimPolicy: Delete
parameters:
  availability: {{ cinder_availability_zone }}

---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: {{ cinder_storage_basename }}-retain
provisioner: kubernetes.io/cinder
reclaimPolicy: Retain
parameters:
  availability: {{ cinder_availability_zone }}
